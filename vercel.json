{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
